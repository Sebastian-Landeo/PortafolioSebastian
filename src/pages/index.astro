---
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GitHubIcon from "../icons/GitHub.astro";
import MailIcon from "../icons/Mail.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../icons/Briefcase.astro";
---

<Layout
  title="Sebastian Landeo - Portafolio - Ingeniero de Software, Análisis de Datos e IA"
  description="Portafolio personal de Sebastian Landeo, ingeniero de software especializado en análisis de datos e inteligencia artificial. Explora mis proyectos y habilidades."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
        Hola, soy Sebastian
        <a
          href="https://www.linkedin.com/in/sebastian-landeo-cuentas"
          target="_blank"
          rel="noopener noreferrer"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        Actualmente curso el cuarto año de la carrera de Ingeniería de Software
        en la Universidad Nacional Mayor de San Marcos (UNMSM), especializado en
        las áreas de <span class="text-yellow-200/90"
          >Análisis de Datos e IA</span
        > para la toma de decisiones.
      </h2>

      <!-- class="w-6 h-6" = class="size-6"-->
      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/sebastian-landeo-cuentas">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/Sebastian-Landeo">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:sebastian.landeo@unmsm.edu.pe">
          <MailIcon class="size-4 md:size-6" />
          sebastian.landeo@unmsm.edu.pe
        </SocialPill>
      </nav>
    </SectionContainer>
  </main>

  <SectionContainer id="experiencia">
    <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
      <Briefcase class="w-7 h-7" />
      Experiencia Laboral
    </h2>
    <Experience />
  </SectionContainer>
</Layout>

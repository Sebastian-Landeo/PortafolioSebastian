---
interface Props {
  image: string;
  name: string;
  link: string;
  description: string;
  work: string;
}
const { image, name, work, description, link } = Astro.props;
---

<div class="slide">
  <div class="testimonial-card">
    <a href={link} target="_blank" rel="noopener noreferrer">
      <img src={image} alt="Usuario" />
    </a>
    <h3>{name}</h3>
    <p>{work}</p>
    <div class="texto-people">
      <p>
        {description}
      </p>
    </div>
  </div>
</div>

<style>
  /* Tarjeta del testimonio */
  .slide {
    display: flex;
    width: 250px;
    justify-content: center;
    align-items: center;
    padding: 10px;
    height: 100%;
  }
  .testimonial-card {
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    text-align: center;
    width: 230x;
    background-color: #fff;
    height: 100%;
  }

  /* Modo oscuro */
  :global(.dark) .testimonial-card {
    background-color: #1f2937; /* bg-gray-800 */
  }

  /* Imagen del usuario */
  .testimonial-card img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-bottom: 10px;
  }

  /* Título del testimonio */
  .testimonial-card h3 {
    margin: 5px 0 0px;
    font-size: 18px;
    color: #131b4d;
  }

  /* Título en modo oscuro */
  :global(.dark) .testimonial-card h3 {
    color: #ffffff;
  }

  .texto-people {
    height: 100%;
    overflow: hidden;
    padding-top: 10px;
  }
  /* Texto del testimonio */
  .testimonial-card p {
    font-size: 14px;
    color: #131b4d;
    margin-bottom: 0 !important;
  }

  /* Texto en modo oscuro */
  :global(.dark) .testimonial-card p {
    color: #d1d5db; /* text-gray-300 */
  }

  @media (width<800px) {
    .testimonial-card {
      width: 250px;
      padding: 15px;
    }
    .testimonial-card h3 {
      font-size: 16px;
    }
    .testimonial-card p {
      font-size: 13px;
    }
  }
</style>
---
import Header from "../components/Header.astro";
import "@fontsource-variable/onest";
import "@fontsource/press-start-2p";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description: string;
}
const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="relative">
    <div
      class="fixed top-0 left-0 z-[-2] h-full w-full bg-gray-50 dark:bg-gray-950
      bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
      dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header />
    <slot />
    <Footer />
    <!-- ligh dark se complementa con el modo oscuro -->
    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        display: flex;
        flex-direction: column;
        height: 100vh;
        text-align: justify; /* ← Texto justificado global */
      }

      /* Justificar todos los párrafos y textos */
      p, div, span, li {
        text-align: justify;
      }

      /* Mantener centrados los títulos */
      h1, h2, h3, h4, h5, h6 {
        text-align: center;
      }

      @media (min-width: 768px) {
        h1, h2, h3, h4, h5, h6 {
          text-align: left; /* Títulos a la izquierda en desktop */
        }
      }

      h1 {
        font-family: "Press Start 2P", system-ui, sans-serif;
        font-size: 1.5rem;
      }

      h2 {
        font-family: "Press Start 2P", system-ui, sans-serif;
        font-size: 1.35rem;
      }

      h2.font-sans {
        font-family: "Onest Variable", system-ui, sans-serif !important;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }
    </style>
  </body>
</html>
